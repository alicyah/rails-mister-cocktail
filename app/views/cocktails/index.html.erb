<div class="container">
  <h1>Cocktails</h1>
  <% @cocktails.each do |cocktail| %>
    <div>
      <%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fill %>
      <%= link_to cocktail.name, cocktail_path(cocktail) %></div>
      <%= link_to "Delete", cocktail_path(cocktail), method: :delete %></div>
  <% end %>

  <div><%= link_to "Add a cocktail", new_cocktail_path %></div>
</div>
