
<div class="banner">
  <div class="banner-content">
    <h1>Cocktails Lottery</h1>
    <p>Which cocktail will you pick?</p>
    <a class="btn btn-primary btn-lg">Create your cocktail now</a>
  </div>
</div>
<div class="container">
  <% @cocktails.each do |cocktail| %>
    <div>
      <%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fill %>
      <%= link_to cocktail.name, cocktail_path(cocktail) %></div>
      <%= link_to "Delete", cocktail_path(cocktail), method: :delete %></div>
  <% end %>

  <div><%= link_to "Add a cocktail", new_cocktail_path %></div>
</div>
